{
  "manifest_version": 3,
  "name": "Liquid Wallet Companion",
  "version": "0.0.1",
  "description": "Companion extension for Liquid Wallet - review transactions in a trusted popup",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Liquid Wallet Companion"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/bridge.js"],
      "run_at": "document_start"
    }
  ]
}
