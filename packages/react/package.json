{
  "name": "@txnlab/use-wallet-ui-react",
  "version": "1.0.4",
  "description": "React components for use-wallet UI",
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/types/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./rainbowkit": {
      "import": {
        "types": "./dist/types/rainbowkit.d.ts",
        "default": "./dist/esm/rainbowkit.js"
      },
      "require": {
        "types": "./dist/types/rainbowkit.d.cts",
        "default": "./dist/cjs/rainbowkit.cjs"
      }
    },
    "./dist/style.css": "./dist/style.css",
    "./theme.css": "./src/theme.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src/theme.css",
    "README.md"
  ],
  "keywords": [
    "algorand",
    "wallet",
    "use-wallet",
    "react",
    "vue",
    "solid",
    "ui"
  ],
  "author": "TxnLab Inc.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TxnLab/use-wallet-ui.git"
  },
  "bugs": {
    "url": "https://github.com/TxnLab/use-wallet-ui/issues"
  },
  "homepage": "https://github.com/TxnLab/use-wallet-ui#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "scripts": {
    "build": "pnpm generate:css && vite build && publint --strict",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "generate:css": "npx @tailwindcss/cli -c ./tailwind.config.js -i ./src/input.css -o ./dist/style.css && node ./scripts/post-process-css.js"
  },
  "peerDependencies": {
    "@allbridge/bridge-core-sdk": ">=3.0.0",
    "@d13co/liquid-ui": "workspace:*",
    "@rainbow-me/rainbowkit": ">=2.0.0",
    "@tanstack/react-query": ">=5.0.0",
    "@txnlab/use-wallet-react": "^4.0.1",
    "liquid-accounts-evm": ">=0.0.1",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19",
    "wagmi": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "@allbridge/bridge-core-sdk": {
      "optional": true
    },
    "@rainbow-me/rainbowkit": {
      "optional": true
    },
    "wagmi": {
      "optional": true
    }
  },
  "dependencies": {
    "@algorandfoundation/algokit-utils": "^9.2.0",
    "@d13co/open-in": "^0.1.0",
    "@floating-ui/react": "0.27.17",
    "@headlessui/react": "2.2.9",
    "@txnlab/utils-ts": "0.1.0",
    "abel-ghost-sdk": "^0.0.5",
    "clsx": "2.1.1",
    "tailwind-merge": "3.4.1"
  },
  "devDependencies": {
    "@allbridge/bridge-core-sdk": "^3.29.1",
    "@rainbow-me/rainbowkit": "^2.2.0",
    "@tailwindcss/cli": "4.1.18",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@vitest/coverage-v8": "3.2.4",
    "@wagmi/core": "^2.16.0",
    "algosdk": "3.5.2",
    "liquid-accounts-evm": "link:../../../evm-sdk",
    "publint": "0.3.17",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tailwindcss": "4.1.18",
    "tsx": "4.21.0",
    "viem": "^2.45.0",
    "vite": "6.4.1",
    "vite-plugin-dts": "4.5.4",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4",
    "wagmi": "^2.14.0"
  }
}
