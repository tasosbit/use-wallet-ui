{
  "name": "@d13co/liquid-companion-extension",
  "version": "0.0.1",
  "private": true,
  "description": "Liquid Wallet Companion browser extension",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist dist-chrome dist-firefox && concurrently \"pnpm:build:content\" \"pnpm:build:background\" \"pnpm:build:popup\" && node scripts/build-manifests.js",
    "dev": "vite build --watch",
    "build:content": "vite build -c vite.config.content.ts",
    "build:background": "vite build -c vite.config.background.ts",
    "build:popup": "vite build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@d13co/liquid-ui": "workspace:*",
    "@tanstack/react-query": "5.90.21",
    "algosdk": "3.5.2",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "devDependencies": {
    "@tailwindcss/vite": "4.1.18",
    "@types/chrome": "0.0.304",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "concurrently": "^9.2.1",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "vite": "6.4.1"
  }
}
